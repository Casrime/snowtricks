{% for key, comment in comments %}
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button {% if key is not same as (0) %}collapsed{% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ comment.id }}" aria-expanded="{% if key is same as (0) %}true{% else %}false{% endif %}" aria-controls="collapse-{{ comment.id }}">
                <img alt="avatar" class="img-thumbnail me-2" src="{{ asset('images/snowtricks.jpg') }}" style="width: 50px">
                {{ comment.user.username }} #{{ comment.id }}
            </button>
        </h2>
        <div id="collapse-{{ comment.id }}" class="accordion-collapse collapse {% if key is same as (0) %}show{% endif %}" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                {{ comment.content }}
            </div>
        </div>
    </div>
{% else %}
    <p>No comments.</p>
{% endfor %}
