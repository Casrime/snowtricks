{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'csrf_token_login') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">login</button>
    {{ form_end(form) }}

    <a href="{{ path('app_forget_password') }}">Mot de passe oubli√©</a>
{% endblock %}
